#!/bin/sh
if [ $button -eq 1 ];then
	mpc -p 6601 toggle > /dev/null
	pkill -RTMIN+11 i3blocks
fi
current=`mpc -p 6601 current`
if [ "$current" != "" ]; then
	p1=`cat ~/Scripts/i3Blocks/pangoBlu`
	if [ $(mpc -p 6601 | grep paused) -z ]; then
		c="||"
	else
		c="[>"
	fi
	p2=`cat ~/Scripts/i3Blocks/pangoEnd`
	echo $p1 $c $p2
fi
