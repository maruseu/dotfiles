#!/bin/bash
if [ $button -eq 1 ];then
	urxvtc -e ncmpcpp > /dev/null &
elif [ $button -eq 2 ];then
	mpc toggle > /dev/null
elif [ $button -eq 3 ];then
	mpc next > /dev/null
elif [ $button -eq 4 ];then
	mpc volume +5 > /dev/null
elif [ $button -eq 5 ];then
	mpc volume -5 > /dev/null
fi
ca=`mpc current -f %artist%`
cn=`mpc current -f %title%`
p1=`cat ~/Scripts/i3Blocks/pangoWht`
p2=`cat ~/Scripts/i3Blocks/pangoEnd`
s=`cat ~/Scripts/i3Blocks/separator`
A="$ca"
	A="$ca"
	B="$cn"

echo "$s""â™ª" "$A"" - ""$B""$s"
